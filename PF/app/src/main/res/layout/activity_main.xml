<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F88288"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="322dp"
        android:layout_height="614dp"
        android:background="@drawable/rounded_corner"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="284dp"
        android:layout_height="364dp"
        android:background="@drawable/rounded_corner2"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/santaClausImage"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/santaClausImage"
        android:elevation="8dp"
        android:layout_width="276dp"
        android:layout_height="245dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/reno"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/button1"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Creados"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/santaClausImage" />

    <Button
        android:id="@+id/button2"
        android:layout_width="261dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Particpando en:"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="262dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Ingresar cÃ³digo"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:elevation="16dp"
        android:fontFamily="@font/whisper"
        android:text="Intercambios"
        android:textColor="#070707"
        android:textSize="60sp"
        android:translationZ="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
