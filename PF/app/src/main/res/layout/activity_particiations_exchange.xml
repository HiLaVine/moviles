<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F88288"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view6"
        android:layout_width="322dp"
        android:layout_height="614dp"
        android:background="@drawable/rounded_corner"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="284dp"
        android:layout_height="364dp"
        android:background="@drawable/rounded_corner2"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/santaClausImage"
        app:layout_constraintVertical_bias="0.846"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/regalos"
        android:elevation="8dp"
        android:layout_width="276dp"
        android:layout_height="245dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/regalos"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />

    <Button
        android:id="@+id/button9"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Intercambio3"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/regalos" />

    <Button
        android:id="@+id/button10"
        android:layout_width="261dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Intercambio4"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintEnd_toEndOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="262dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D3BA0701"
        android:elevation="16dp"
        android:text="Intercambio5"
        android:textColor="#FFFFFF"
        android:translationZ="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/view7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button10"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:fontFamily="@font/whisper"
        android:text="Participando en:"
        android:textColor="#070707"
        android:textSize="48sp"
        android:translationZ="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view7" />

</androidx.constraintlayout.widget.ConstraintLayout>